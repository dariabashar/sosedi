rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Пользователи могут читать/писать только свои данные
    // Разрешаем создание профиля при регистрации
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Посты - авторизованные пользователи могут читать, автор может писать
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.authorId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
    }
    
    // Группы - авторизованные пользователи могут читать, участники могут писать
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.creatorId;
    }
    
    // Объявления - авторизованные пользователи могут читать, автор может писать
    match /advertisements/{adId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.authorId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
    }
    
    // События - авторизованные пользователи могут читать, организатор может писать
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.organizerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.organizerId;
    }
    
    // Чаты - только участники чата
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
    }
  }
}